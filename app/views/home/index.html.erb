      <div id="available view">
          <sub-header>Available View</sub-header>
      </div>
      
      <div id="all view" style="display: none">
        <sub-header>All View</sub-header>
      </div>
      
      <div id="schedule changes view" style="display: none">
        <sub-header>Schedule Changes View</sub-header>
      </div>
        
    </body>
</html>

