<div id="container-fluid">
  <div class="row row-flex row-flex-wrap">
    <% @peer_teachers.each do |pt| %>
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div class="col-sm-3">
				    <img src=<%= pt.image %> >
			    </div>
			    <div class="col-sm-9">
            <h3><%= pt.name %></h3>
            <h4>Courses: </h4>
    				<p>  CSCE <%= pt.courselist %> </p>
            <h4>Office Hours:</h4>  
  					  <% @office_hours.where(email: pt.email).find_each do |time| 
  					    sHour=""
  					    sMin=""
  					    sTOD=""
  					    eHour=""
  					    eMin=""
  					    eTOD=""
  					    
  					    if time.sHour>12
  					      sHour=time.sHour-12
  					      sTOD="pm"
  					    else
  					      sHour=time.sHour
  					      if time.sHour==12
    					        sTOD="pm"
    					      else
    					        sTOD="am"
    					      end
  					    end
  					    
  					    if time.sMin==0
  					      sMin="00"
  					    else 
  					      sMin=time.sMin
  					    end
  					    
  					    if time.eHour>12
  					      eHour=time.eHour-12
  					      eTOD="pm"
  					    else
  					      eHour=time.eHour
  					      if time.eHour==12
    					        eTOD="pm"
    					      else
    					        eTOD="am"
    					      end
  					    end
  					    
  					    if time.eMin==0
  					      eMin="00"
  					    else 
  					      eMin=time.eMin
  					    end
  					  %>
  				    <%= time.dow %> <%= sHour %>:<%= sMin %><%= sTOD %> - <%= eHour %>:<%= eMin %><%= eTOD %>
              <br>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>